{
	"name": "dotmobile",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "NODE_ENV=production tsc && vite build",
		"preview": "vite preview",
		"test.e2e": "playwright test",
		"test.unit": "vitest",
		"lint": "biome check --write --verbose  src/**/* src/",
		"build-ios": "ionic capacitor build ios --release --prod --no-open",
		"build-android": "ionic capacitor build android --release --prod --no-open",
		"ios": "npm run build && npm run sync && npx cap run ios",
		"android": "npm run build && npx cap run android",
		"sync": "cap sync",
		"iconGenerate": "npx @capacitor/assets generate --iconBackgroundColor '#eeeeee' --iconBackgroundColorDark '#1E1F1D' --splashBackgroundColor '#eeeeee' --splashBackgroundColorDark '#1E1F1D'",
		"updateAllPackages": "npx npm-check-updates -i",
		"prepare": "husky install"
	},
	"dependencies": {
		"@capacitor/android": "^6.2.0",
		"@capacitor/app": "6.0.2",
		"@capacitor/core": "^6.2.0",
		"@capacitor/device": "^6.0.2",
		"@capacitor/filesystem": "^6.0.2",
		"@capacitor/haptics": "6.0.2",
		"@capacitor/ios": "^6.2.0",
		"@capacitor/keyboard": "6.0.3",
		"@capacitor/preferences": "^6.0.3",
		"@capacitor/status-bar": "6.0.2",
		"@ionic/react": "^8.4.1",
		"@ionic/react-router": "^8.4.1",
		"@types/react-router": "^5.1.20",
		"@types/react-router-dom": "^5.3.3",
		"@types/video.js": "^7.3.58",
		"capacitor-blob-writer": "^1.1.19",
		"i18next": "^24.2.1",
		"i18next-browser-languagedetector": "^8.0.2",
		"ionicons": "^7.4.0",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"react-i18next": "^15.4.0",
		"react-router": "^5.3.4",
		"react-router-dom": "^5.3.4"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@capacitor/assets": "^3.0.5",
		"@capacitor/cli": "^6.2.0",
		"@ionic/cli": "^7.2.0",
		"@playwright/test": "^1.49.1",
		"@types/node": "^22.10.6",
		"@types/react": "^19.0.7",
		"@types/react-dom": "^19.0.3",
		"@unocss/transformer-variant-group": "^65.4.0",
		"@vitejs/plugin-legacy": "^6.0.0",
		"@vitejs/plugin-react": "^4.3.4",
		"husky": "^9.1.7",
		"jsdom": "^26.0.0",
		"lint-staged": "^15.3.0",
		"terser": "^5.37.0",
		"typescript": "^5.7.3",
		"unocss": "^65.4.0",
		"vite": "^6.0.7",
		"vitest": "^2.1.8"
	},
	"lint-staged": {
		"*": "biome check --write --verbose  src/**/* src/"
	},
	"description": "WA Sign language bibles app"
}
