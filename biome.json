{
	"$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 80,
		"ignore": []
	},
	"files": {
		"include": ["src/**/*"],
		"ignore": ["node_modules", "bcApi.ts", "tests", "playwright.config.ts"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off",
				"noConsoleLog": "warn"
			},
			"correctness": {
				"noUnusedVariables": "error"
			},
			"complexity": {
				"noUselessCatch": "warn"
			}
		}
	}
}
