{
  "name": "dotmobile",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "NODE_ENV=production tsc && vite build",
    "preview": "vite preview",
    "test.e2e": "playwright test",
    "test.unit": "vitest",
    "lint": "biome check --write --verbose  src/**/* src/",
    "build-ios": "ionic capacitor build ios --release --prod --no-open",
    "build-android": "ionic capacitor build android --release --prod --no-open",
    "ios": "npm run build && npm run sync && npx cap run ios",
    "android": "npm run build && npx cap run android",
    "sync": "cap sync",
    "iconGenerate": "npx @capacitor/assets generate --iconBackgroundColor '#eeeeee' --iconBackgroundColorDark '#1E1F1D' --splashBackgroundColor '#eeeeee' --splashBackgroundColorDark '#1E1F1D'",
    "updateAllPackages": "npx npm-check-updates -i",
    "prepare": "husky"
  },
  "dependencies": {
    "@capacitor/android": "^7.4.0",
    "@capacitor/app": "^7.0.1",
    "@capacitor/core": "^7.4.0",
    "@capacitor/device": "^7.0.1",
    "@capacitor/filesystem": "^7.1.1",
    "@capacitor/haptics": "^7.0.1",
    "@capacitor/ios": "^7.4.0",
    "@capacitor/keyboard": "^7.0.1",
    "@capacitor/preferences": "^7.0.1",
    "@capacitor/status-bar": "^7.0.1",
    "@ionic/react": "^8.6.2",
    "@ionic/react-router": "^8.6.2",
    "@types/react-router": "^5.1.20",
    "@types/react-router-dom": "^5.3.3",
    "@types/video.js": "^7.3.58",
    "capacitor-blob-writer": "^1.1.19",
    "i18next": "^25.3.0",
    "i18next-browser-languagedetector": "^8.2.0",
    "ionicons": "^8.0.9",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^15.4.0",
    "react-router": "^5.3.4",
    "react-router-dom": "^5.3.4"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.6",
    "@capacitor/assets": "^3.0.5",
    "@capacitor/cli": "^7.4.0",
    "@ionic/cli": "^7.2.1",
    "@playwright/test": "^1.53.2",
    "@types/node": "^24.0.10",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@unocss/transformer-variant-group": "^66.3.2",
    "@vitejs/plugin-legacy": "^7.0.0",
    "@vitejs/plugin-react": "^4.6.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.2",
    "terser": "^5.43.1",
    "typescript": "^5.8.3",
    "unocss": "^66.3.2",
    "vite": "^7.0.0",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*": "biome check --write --verbose  src/**/* src/"
  },
  "description": "WA Sign language bibles app"
}
